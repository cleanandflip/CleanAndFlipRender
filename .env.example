# Core
PORT=3000
NODE_ENV=development

# Database (optional for slate boot)
# DEV_DATABASE_URL=postgresql://user:pass@host:5432/dbname
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Sessions
SESSION_SECRET=change-me
# SESSION_COOKIE_DOMAIN=

# Webhooks
WEBHOOK_PREFIX=/wh

# Client origin (optional, same-origin by default)
# FRONTEND_ORIGIN=http://localhost:5173

# Allow embedding in iframes from preview hosts (comma-separated)
# Example: PREVIEW_FRAME_ANCESTORS=https://*.fly.dev,https://preview.builder.io
# PREVIEW_FRAME_ANCESTORS=

# Stripe (optional - guarded)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# Google OAuth (optional - guarded)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Redis (optional)
# REDIS_URL=
# ENABLE_REDIS=false

# Builder.io (add later)
# BUILDER_PUBLIC_KEY=
# BUILDER_PRIVATE_KEY=
